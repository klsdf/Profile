{
    "compilerOptions": {
      "target": "es5",                   // 编译后的JavaScript版本
      "module": "commonjs",              // 使用的模块系统
      "outDir": "./",                // 输出目录
      "rootDir": "./",                // 输入文件的根目录
      "strict": true,                    // 启用所有严格类型检查选项
      "esModuleInterop": true,           // 允许对CommonJS和ES模块之间的互操作性
      "forceConsistentCasingInFileNames": true, // 强制文件名一致
      "skipLibCheck": true               // 跳过库文件的类型检查
    },
    "include": ["*.ts"],             // 包含的文件
    "exclude": ["node_modules", "**/*.spec.ts"] // 排除的文件
  }